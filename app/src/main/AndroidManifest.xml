<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hsh.f4.mc.kbfapp">

    <!-- Standortabfrage fÃ¼r Maps -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Internetpermission -->
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KBFApp">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FahrerStartseite"
            android:label="@string/title_activity_fahrer_startseite" />

        <activity android:name=".SidebarTest" />
        <activity android:name=".Mitarbeiter" />
        <activity android:name=".UnternehmerStartseite" />
        <activity android:name=".Registrierung" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>